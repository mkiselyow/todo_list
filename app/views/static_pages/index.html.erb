<% #if signed_in? %>
  <div>
    <h1>Users</h1>
    <table class="table table-striped">
      <thead>
          <th>First name</th>
          <th>Last name</th>
          <th>Email</th>
          <th>Show</th>
          <th>Edit</th>
          <th>Destroy</th>
          <th>Activity</th>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td>
              <% if user.avatar_file_name %>
              <%= image_tag user.avatar.url(:thumb) %>
              <% end %>
            </td>
            <td><%= user.first_name %></td>
            <td><%= user.last_name %></td>
            <td><%= user.email %></td>
            <% if current_user == user %>
              <td><%= link_to 'Show', user %></td>
              <td><%= link_to 'Edit', edit_user_path(user) %></td>
              <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              <td><%= 'logged in' %></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% #else %>
  <div class="jumbotron">
    <div class="container">
      <div class="row">
        <h1>To Do List</h1>
        <p class="lead">This app can:</p>
        <div class="col-md-6 col-md-offset-3 super_functions">
          <ul>
            <li>Manual Autentification</li>
            <li>Facebook Autentification</li>
            <li>User can have Avatar</li>
            <li>Create Projects</li>
            <li>Create Tasks</li>
            <li>Tasks can have deadline</li>
            <li>Tasks can have commit as a tooltip</li>
            <li>Mark Tasks as "done"</li>
            <li>Change Task's priority by drag&amp;drop</li>
          </ul>
        </div>
      </div>
    </div>
    <% if @projects.any? %>
      <% @projects.each do |project| %>
        <ul class="list-group">
          <li class="list-group-item list-group-item-info">
            <div class="row">
              <div class="col-md-3 col-xs-3"><strong><%= project.name %></strong> Project</div>
              <div class="col-md-4 s_devises"><%= project.user.email %></div>
              <div class="col-md-1 col-xs-3"><%= link_to 'Show', user_project_path(project.user, project) %></div>
              <div class="col-md-1 col-xs-3"><%= link_to 'Edit', edit_user_project_path(project.user, project) %></div>
              <div class="col-md-1 col-xs-3"><%= link_to 'Destroy', delete_project_path(project.user, project), method: :delete, data: { confirm: 'Are you sure?' } %></div>
              <div class="col-md-2 s_devises"><%= link_to 'New Task', new_project_task_path(project) %></div>
            </div>
          </li>
          <li class="list-group-item">
            <ul class="list-group sortable list">
              <% project.tasks.each do |task| %>
                <li class="list-group-item item 
                  <% if current_user %>
                    <% if current_user != task.user %>
                      <%= 'disabled' %>
                    <% end %>
                  <% else %>
                    <%= 'disabled' %>
                  <% end %>" data-id="<%= task.id %>" data-toggle="tooltip" data-placement="left" title="<%= task.comment %>">
                  <div class="row">
                    
                    <div class="col-md-2 s_devises"><%= task.id %> Task</div>
                    <div class="col-md-2 col-xs-3">
                      <% if task.status %>
                        <del>
                      <% end %>
                      <%= task.name %>
                      <% if task.status %>
                        </del>
                      <% end %>
                    </div>
                    <div class="col-md-4 s_devises"><%= if task.deadline then task.deadline.strftime('%d/%m/%Y %H:%M') end %></div>
                    <div class="col-md-1 col-xs-3"><%= link_to 'Show', project_task_path(project, task) %></div>
                    <div class="col-md-1 col-xs-3"><%= link_to 'Edit', edit_project_task_path(project, task) %></div>
                    <div class="col-md-1 col-xs-3"><%= link_to 'Destroy', delete_comment_path(project, task), method: :delete, data: { confirm: 'Are you sure?' } %></div>
                  </div>
                </li>
              <% end %>
            </ul>
          </li>
        </ul>
      <% end %>
    <% else %>
    <% end %>
    <% if signed_in? %>
      <%= link_to "Create New Project", new_user_project_path(current_user), class: "btn btn-lg btn-success" %>
    <% else %>
      <%= link_to "Sign up today", signup_path, class: "btn btn-lg btn-success" %>
      <%= link_to "Sign in with Facebook", "/auth/facebook", class: "btn btn-lg btn-success" %>
    <% end %>
