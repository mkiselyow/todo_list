<%= form_for([@project, @tasks]) do |f| %>
  
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name, id: :task_name, required: true %>
  </div>

  <div class="field">
    <%= f.label :priority %>
    <%= f.number_field :priority, id: :task_priority %>
  </div>

  <div class="field">
    <%= f.label :status %>
    <%= f.text_field :status, id: :task_status %>
  </div>

  <div class="field">
    <%= f.label :deadline %>
    <%= f.datetime_select :deadline, id: :task_deadline %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
